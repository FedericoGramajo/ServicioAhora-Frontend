@attribute [Route(RouteConstants.ServiceDetailPage)]
@using ClientLibrary.Helper
@inject NavigationManager Navigation
@inject IBookingService BookingService
@inject IAddressService AddressService
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS

<PageTitle>Servicio - ServicioAhora!</PageTitle>

<div class="landing-page">


    <main class="container py-5">
        @if (isLoading)
        {
             <div class="d-flex justify-content-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else if (Service is null)
        {
            <div class="alert alert-warning mt-4">No encontramos el servicio solicitado. <a href="@RouteConstants.Search">Volver a buscar</a>.</div>
        }
        else
        {
            <div class="row g-4 align-items-start">
                <div class="col-lg-7">
                    <div class="surface-card h-100">
                        <div class="d-flex flex-wrap gap-2 align-items-center mb-1">
                            <span class="badge bg-primary-subtle text-primary">@Service.CategoryName</span>
                        </div>
                        <p class="text-primary fw-bold mb-1">@Service.ProfessionalFullName</p>
                        <h1 class="mb-3">@Service.Name</h1>
                        <p class="text-muted mb-4 lead">@Service.Description</p>
                        <div class="d-flex flex-wrap gap-3 mb-4">
                            @if (Service.EstimatedDuration > 0)
                            {
                                <div class="pill">
                                    <i class="fa-regular fa-clock me-2"></i>@Service.EstimatedDuration min. aprox.
                                </div>
                            }
                        </div>
                        <div class="row g-3">
                            <!-- Features -->
                             <div class="col-md-6">
                                <div class="feature-tile">
                                    <i class="fa-solid fa-shield-heart text-primary"></i>
                                    <div>
                                        <p class="fw-semibold mb-0">Garantía clara</p>
                                        <small class="text-muted">Revisión y ajuste sin costo.</small>
                                    </div>
                                </div>
                            </div>
                            <!-- More features... -->
                        </div>
                    </div>

                     <div class="surface-card mt-4">
                        <h3 class="mb-4">Opiniones de clientes</h3>
                        <div class="row g-4">
                                <div class="col-12 text-center py-4">
                                    <p class="text-muted">Aún no hay opiniones para este servicio.</p>
                                </div>
                        </div>
                    </div>

                </div>
                <div class="col-lg-5">
                    <div class="surface-card service-summary sticky-top">
                        <div class="ratio ratio-4x3 rounded overflow-hidden mb-3">
                             @if (!string.IsNullOrEmpty(Service.Image))
                            {
                                <img src="@Service.Image" alt="@Service.Name" style="object-fit: cover;" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center bg-light h-100">
                                    @if (!string.IsNullOrEmpty(CategoryIcon))
                                    {
                                        <i class="@CategoryIcon fa-4x text-muted opacity-25"></i>
                                    }
                                    else
                                    {
                                        <i class="fa-solid fa-screwdriver-wrench fa-4x text-muted opacity-25"></i>
                                    }
                                </div>
                            }
                        </div>
                        <p class="text-muted mb-1">Precio estimado</p>
                        <h3 class="mb-3">@Service.BasePrice.ToString("C0", LocalCulture)</h3>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-lg" type="button" @onclick="ShowBookingModal">
                                <i class="fa-regular fa-calendar-check me-2"></i>Reservar turno
                            </button>
                            <button class="btn btn-outline-primary" type="button" @onclick="BackToSearch">Seguir explorando</button>
                        </div>
                        <hr class="my-4" />
                        <p class="fw-semibold mb-2">Incluye</p>
                        <ul class="list-unstyled small text-muted">
                            <li><i class="fa-solid fa-check text-success me-2"></i>Materiales sugeridos antes de la visita</li>
                            <li><i class="fa-solid fa-check text-success me-2"></i>Seguimiento en vivo con el profesional</li>
                            <li><i class="fa-solid fa-check text-success me-2"></i>Pago protegido hasta que apruebes el trabajo</li>
                        </ul>
                    </div>
                </div>
            </div>
        }

    @if (showBookingModal && Service != null)
    {
        <BookingModal Service="Service" 
                      CustomerId="@customerId" 
                      OnClose="CloseBookingModal" 
                      OnBookingConfirmed="HandleBookingConfirmed" />
    }

    @if (showNoAddressModal)
    {
        <AddressWarningModal OnClose="CloseNoAddressModal" 
                            OnGoToProfile="GoToProfile" />
    }
    </main>


</div>


@code {
    [Parameter]
    public string Slug { get; set; } = string.Empty;

    // Use ID since our routes use ID currently, but parameter is named Slug. 
    // We'll try to parse it as Guid.
    private Guid ServiceId => Guid.TryParse(Slug, out var id) ? id : Guid.Empty;

    [Inject] private IServOfferingService ServiceService { get; set; } = default!;
    [Inject] private ICategoryService CategoryService { get; set; } = default!;
    [Inject] private CartStore CartState { get; set; } = default!; 

    private static readonly CultureInfo LocalCulture = new("es-AR");

    private GetServiceOffering? Service;
    private string? CategoryIcon;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        if (ServiceId != Guid.Empty)
        {
            try 
            {
                Service = await ServiceService.GetByIdAsync(ServiceId);
                if (Service != null)
                {
                    var category = await CategoryService.GetByIdAsync(Service.CategoryId);
                    CategoryIcon = category?.Icon;
                }
            }
            catch(Exception ex)
            {
                Console.WriteLine($"Error loading service: {ex.Message}");
            }
        }
        isLoading = false;
    }

    private void BackToSearch() => Navigation.NavigateTo(RouteConstants.Search);

    private bool showBookingModal = false;
    private bool showNoAddressModal = false;
    private string customerId = string.Empty;

    private async Task ShowBookingModal()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if (!authState.User.Identity?.IsAuthenticated ?? true)
        {
            await JS.ToastrInfo("Iniciá sesión para realizar una reserva");
            Navigation.NavigateTo(RouteConstants.Login);
            return;
        }

        customerId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value
                  ?? authState.User.FindFirst("nameid")?.Value ?? string.Empty;

        if (!string.IsNullOrEmpty(customerId))
        {
            var addressResult = await AddressService.GetAddressesAsync(customerId);
            if (!addressResult.success || !(addressResult.Data?.Any() ?? false))
            {
                showNoAddressModal = true;
                return;
            }
        }

        showBookingModal = true;
    }

    private void CloseNoAddressModal() => showNoAddressModal = false;

    private void GoToProfile()
    {
        showNoAddressModal = false;
        Navigation.NavigateTo(RouteConstants.Profile + "?tab=addresses");
    }

    private void CloseBookingModal() => showBookingModal = false;

    private async Task HandleBookingConfirmed(DateTime selectedTime)
    {
        showBookingModal = false;
        await JS.ToastrSuccess($"¡Reserva enviada! Turno solicitado para el {selectedTime.ToString("dddd d/M HH:mm", LocalCulture)}. Te avisaremos cuando el profesional confirme.");
    }
}
