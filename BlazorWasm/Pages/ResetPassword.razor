@page "/reset-password"
@using System.ComponentModel.DataAnnotations
@using System.Web
@using ClientLibrary.Models
@inject HttpClient Http

<PageTitle>Nueva contraseña - ServicioAhora!</PageTitle>

<section class="auth-page py-5 py-lg-6">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-xl-6">
                <div class="card auth-card shadow-lg border-0">
                    <div class="card-body p-4 p-lg-5">
                        <div class="text-center mb-4">
                            <a class="auth-brand d-inline-flex align-items-center" href="/">
                                <i class="fa-solid fa-house-chimney me-2"></i>
                                <span class="fw-bold">ServicioAhora!</span>
                            </a>
                            <p class="text-muted mb-0">Configurá una nueva contraseña para tu cuenta.</p>
                        </div>

                        @if (!IsTokenCheckComplete)
                        {
                            <div class="alert alert-info">Verificando el enlace de recuperación...</div>
                        }
                        else if (!IsTokenValid)
                        {
                            <div class="text-center">
                                <div class="alert alert-danger" role="alert">
                                    El enlace de recuperación es inválido o ya expiró.
                                </div>
                                <div class="d-grid gap-2">
                                    <a class="btn btn-primary" href="/forgot-password">Solicitar nuevo enlace</a>
                                    <a class="btn btn-link" href="/">Volver al inicio</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            @if (!string.IsNullOrWhiteSpace(Message))
                            {
                                <div class="alert alert-@AlertClass" role="alert">@Message</div>
                            }

                            <EditForm Model="Model" OnValidSubmit="ResetPassword">
                                <DataAnnotationsValidator />
                                <div class="mb-3">
                                    <label class="form-label fw-semibold" for="resetEmail">Correo electrónico</label>
                                    <InputText id="resetEmail" class="form-control" @bind-Value="Model.Email" readonly />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-semibold" for="newPassword">Nueva contraseña</label>
                                    <InputText id="newPassword" type="password" class="form-control" @bind-Value="Model.Password" placeholder="••••••••" />
                                    <ValidationMessage For="() => Model.Password" />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold" for="confirmPassword">Confirmar contraseña</label>
                                    <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="Model.ConfirmPassword" placeholder="••••••••" />
                                    <ValidationMessage For="() => Model.ConfirmPassword" />
                                </div>
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary btn-lg">Confirmar</button>
                                    <a class="btn btn-outline-primary" href="/login">Volver a iniciar sesión</a>
                                    <a class="btn btn-link" href="/">Volver al inicio</a>
                                </div>
                            </EditForm>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private ResetPasswordModel Model { get; } = new();
    private string Message { get; set; } = string.Empty;
    private string AlertClass { get; set; } = "info";
    private bool IsTokenValid { get; set; }
    private bool IsTokenCheckComplete { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var uri = new Uri(NavManager.Uri);
        var query = HttpUtility.ParseQueryString(uri.Query);
        Model.Email = query["email"] ?? string.Empty;
        Model.Token = query["token"] ?? string.Empty;

        if (string.IsNullOrWhiteSpace(Model.Email) || string.IsNullOrWhiteSpace(Model.Token))
        {
            IsTokenValid = false;
            IsTokenCheckComplete = true;
            return;
        }

        var response = await Http.GetAsync($"authentication/verify-reset?email={HttpUtility.UrlEncode(Model.Email)}&token={HttpUtility.UrlEncode(Model.Token)}");
        IsTokenValid = response.IsSuccessStatusCode;
        IsTokenCheckComplete = true;
    }

    private async Task ResetPassword()
    {
        Message = string.Empty;
        AlertClass = "info";

        var response = await Http.PostAsJsonAsync("authentication/reset-password", Model);
        if (!response.IsSuccessStatusCode)
        {
            AlertClass = "danger";
            Message = "No pudimos actualizar la contraseña. Intentá nuevamente.";
            return;
        }

        var result = await response.Content.ReadFromJsonAsync<ServiceResponse>();
        if (result is null)
        {
            AlertClass = "danger";
            Message = "No pudimos actualizar la contraseña. Intentá nuevamente.";
            return;
        }

        AlertClass = result.success ? "success" : "danger";
        Message = string.IsNullOrWhiteSpace(result.Message)
            ? "Contraseña actualizada correctamente."
            : result.Message;
    }

    private sealed class ResetPasswordModel
    {
        public string Email { get; set; } = string.Empty;
        public string Token { get; set; } = string.Empty;

        [Required(ErrorMessage = "Ingresá una contraseña.")]
        [MinLength(6, ErrorMessage = "La contraseña debe tener al menos 6 caracteres.")]
        public string Password { get; set; } = string.Empty;

        [Required(ErrorMessage = "Confirmá la contraseña.")]
        [Compare(nameof(Password), ErrorMessage = "Las contraseñas no coinciden.")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}
