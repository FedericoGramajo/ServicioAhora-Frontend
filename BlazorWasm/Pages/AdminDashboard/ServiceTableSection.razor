@using System.Globalization
@using ClientLibrary.Models.Category
@using ClientLibrary.Models.ServicioAhora.ServOffering
@using ClientLibrary.Services.Contracts
@using ClientLibrary.Helper
@inject IServOfferingService servOfferingService
@inject IJSRuntime js

<section class="surface-card mb-4">
    <div class="d-flex flex-column flex-lg-row justify-content-between gap-3 align-items-lg-center mb-3">
        <div>
            <h4 class="mb-1">Servicios</h4>
            <p class="text-muted mb-0">ABM y seguimiento de catálogo</p>
        </div>
        <div class="d-flex gap-2 flex-wrap align-items-center">
            <div class="input-group input-group-sm" style="max-width: 250px;">
                <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass text-muted"></i></span>
                <input type="text" class="form-control border-start-0 ps-0 shadow-none" placeholder="Buscar servicio o profesional..." @bind="SearchTerm" @bind:event="oninput" />
            </div>
            <select class="form-select form-select-sm w-auto" @bind="SelectedCategory" @bind:event="onchange">
                <option value="">Todos los rubros</option>
                @foreach (var category in Categories)
                {
                    <option value="@category.Name">@category.Name</option>
                }
            </select>
            <select class="form-select form-select-sm w-auto" @bind="SelectedStatus" @bind:event="onchange">
                <option value="">Estado</option>
                <option value="true">Publicado</option>
                <option value="false">Oculto</option>
            </select>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table align-middle table-borderless mb-0">
            <thead class="text-muted small">
                <tr>
                    <th @onclick='() => Sort("Name")' style="cursor: pointer;">
                        Servicio <i class="fa-solid @GetSortIcon("Name") ms-1 small text-muted"></i>
                    </th>
                    <th @onclick='() => Sort("Professional")' style="cursor: pointer;">
                        Profesional <i class="fa-solid @GetSortIcon("Professional") ms-1 small text-muted"></i>
                    </th>
                    <th>Rubro</th>
                    <th @onclick='() => Sort("Price")' style="cursor: pointer;">
                        Precio <i class="fa-solid @GetSortIcon("Price") ms-1 small text-muted"></i>
                    </th>
                    <th>Estado</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (FilteredServices?.Any() == true)
                {
                    @foreach (var service in FilteredServices)
                    {
                        <tr>
                            <td>@service.Name</td>
                            <td>@service.ProfessionalFullName</td>
                            <td>@service.CategoryName</td>
                            <td>@service.BasePrice.ToString("C0", LocalCulture)</td>
                            <td>
                                @if (service.Status)
                                {
                                    <span class="badge rounded-pill bg-success-subtle text-success small">Publicado</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-secondary-subtle text-secondary small">Oculto</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <button class="btn btn-outline-primary btn-sm d-flex align-items-center gap-1" @onclick="() => OpenEditModal(service)">
                                        <i class="fa-solid fa-pen small"></i> Editar
                                    </button>
                                    <button class="btn btn-outline-danger btn-sm d-flex align-items-center gap-1" @onclick="() => DeleteService(service)">
                                        <i class="fa-solid fa-trash small"></i> Eliminar
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No se encontraron servicios con los filtros aplicados.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</section>

<AdminServiceModal ShowModal="ShowModal"
                   IsEditing="true"
                   Model="EditingModel"
                   Categories="FilteredCategoriesForModal"
                   IsLoading="IsLoading"
                   OnClose="CloseModal"
                   OnSave="SaveService" />

<ConfirmationModal @ref="deleteConfirmModal"
                   Title="Eliminar servicio"
                   Message="@DeleteConfirmMessage"
                   ButtonText="Eliminar"
                   ButtonClass="btn-danger"
                   IsProcessing="IsDeleting"
                   OnConfirm="ExecuteDelete" />

@code {
    [Parameter] public IEnumerable<GetCategory> Categories { get; set; } = Enumerable.Empty<GetCategory>();
    [Parameter] public IEnumerable<GetServiceOffering> Services { get; set; } = Enumerable.Empty<GetServiceOffering>();
    [Parameter] public IEnumerable<GetProfessional> Professionals { get; set; } = Enumerable.Empty<GetProfessional>();
    [Parameter] public CultureInfo LocalCulture { get; set; } = CultureInfo.InvariantCulture;
    [Parameter] public EventCallback OnServiceChanged { get; set; }

    private string SelectedCategory { get; set; } = "";
    private string SelectedStatus { get; set; } = "";
    private string SearchTerm { get; set; } = "";
    
    // Sorting State
    private string SortColumn { get; set; } = "Name";
    private bool SortAscending { get; set; } = true;

    // Edit Modal State
    private bool ShowModal { get; set; }
    private UpdateServiceOffering EditingModel { get; set; } = new();
    private List<GetCategory> FilteredCategoriesForModal { get; set; } = new();
    private bool IsLoading { get; set; }

    // Delete Confirmation Modal State
    private ConfirmationModal deleteConfirmModal = default!;
    private Guid? PendingDeleteServiceId { get; set; }
    private string DeleteConfirmMessage { get; set; } = "";
    private bool IsDeleting { get; set; }

    private IEnumerable<GetServiceOffering> FilteredServices
    {
        get
        {
            var query = Services.AsEnumerable();

            // Apply Filters
            if (!string.IsNullOrEmpty(SelectedCategory))
                query = query.Where(s => s.CategoryName == SelectedCategory);
            
            if (!string.IsNullOrEmpty(SelectedStatus))
                query = query.Where(s => s.Status.ToString().ToLower() == SelectedStatus.ToLower());

            if (!string.IsNullOrEmpty(SearchTerm))
            {
                var term = SearchTerm.ToLower();
                query = query.Where(s => 
                    s.Name.ToLower().Contains(term) || 
                    s.ProfessionalFullName.ToLower().Contains(term) ||
                    (s.Description != null && s.Description.ToLower().Contains(term)));
            }

            // Apply Sort
            query = SortColumn switch
            {
                "Name" => SortAscending ? query.OrderBy(s => s.Name) : query.OrderByDescending(s => s.Name),
                "Professional" => SortAscending ? query.OrderBy(s => s.ProfessionalFullName) : query.OrderByDescending(s => s.ProfessionalFullName),
                "Price" => SortAscending ? query.OrderBy(s => s.BasePrice) : query.OrderByDescending(s => s.BasePrice),
                _ => query
            };

            return query.ToList();
        }
    }

    private void Sort(string column)
    {
        if (SortColumn == column)
        {
            SortAscending = !SortAscending;
        }
        else
        {
            SortColumn = column;
            SortAscending = true;
        }
    }

    private string GetSortIcon(string column)
    {
        if (SortColumn != column) return "fa-sort";
        return SortAscending ? "fa-sort-up" : "fa-sort-down";
    }

    private void OpenEditModal(GetServiceOffering service)
    {
        // Filter categories based on professional's assigned categories
        var professional = Professionals.FirstOrDefault(p => p.AppUserId == service.ProfessionalId);
        if (professional != null && professional.Categories.Any())
        {
            FilteredCategoriesForModal = Categories
                .Where(c => professional.Categories.Contains(c.Name))
                .ToList();
        }
        else
        {
            // Fallback: all categories if professional not found or has none (should not happen)
            FilteredCategoriesForModal = Categories.ToList();
        }

        EditingModel = new UpdateServiceOffering
        {
            Id = service.Id,
            Name = service.Name,
            CategoryId = service.CategoryId,
            BasePrice = service.BasePrice,
            Description = service.Description,
            EstimatedDuration = service.EstimatedDuration,
            Status = service.Status,
            Image = service.Image
        };
        ShowModal = true;
    }

    private void CloseModal()
    {
        ShowModal = false;
    }

    private async Task SaveService()
    {
        IsLoading = true;
        try
        {
            var result = await servOfferingService.UpdateAsync(EditingModel);
            if (result.success)
            {
                await js.ToastrSuccess("Servicio actualizado correctamente.");
                ShowModal = false;
                await OnServiceChanged.InvokeAsync();
            }
            else
            {
                await js.ToastrError(result.Message);
            }
        }
        catch (Exception ex)
        {
            await js.ToastrError("Error al actualizar el servicio.");
            Console.WriteLine(ex);
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task DeleteService(GetServiceOffering service)
    {
        PendingDeleteServiceId = service.Id;
        DeleteConfirmMessage = $"¿Estás seguro de eliminar el servicio '{service.Name}'?";
        StateHasChanged();
        await deleteConfirmModal.Show();
    }

    private async Task ExecuteDelete()
    {
        if (PendingDeleteServiceId is null) return;

        IsDeleting = true;
        try
        {
            var result = await servOfferingService.DeleteAsync(PendingDeleteServiceId.Value);
            if (result.success)
            {
                await js.ToastrSuccess("Servicio eliminado.");
                await OnServiceChanged.InvokeAsync();
            }
            else
            {
                await js.ToastrError(result.Message);
            }
        }
        catch (Exception ex)
        {
            await js.ToastrError("Error al eliminar el servicio.");
            Console.WriteLine(ex);
        }
        finally
        {
            IsDeleting = false;
            await deleteConfirmModal.Hide();
            PendingDeleteServiceId = null;
        }
    }
}
