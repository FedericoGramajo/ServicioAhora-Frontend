@using System.Globalization
@using ClientLibrary.Models.Category
@using ClientLibrary.Models.ServicioAhora.ServOffering

<section class="surface-card mb-4">
    <div class="d-flex flex-column flex-lg-row justify-content-between gap-3 align-items-lg-center mb-3">
        <div>
            <h4 class="mb-1">Servicios</h4>
            <p class="text-muted mb-0">ABM y seguimiento de cat√°logo</p>
        </div>
        <div class="d-flex gap-2 flex-wrap">
            <select class="form-select" @bind="SelectedCategory" @bind:event="onchange">
                <option value="">Todos los rubros</option>
                @foreach (var category in Categories)
                {
                    <option value="@category.Name">@category.Name</option>
                }
            </select>
            <select class="form-select" @bind="SelectedStatus" @bind:event="onchange">
                <option value="">Estado</option>
                <option value="true">Publicado</option>
                <option value="false">Oculto</option>
            </select>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table align-middle table-borderless mb-0">
            <thead class="text-muted small">
                <tr>
                    <th>Servicio</th>
                    <th>Rubro</th>
                    <th>Precio</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (FilteredServices?.Any() == true)
                {
                    @foreach (var service in FilteredServices)
                    {
                        <tr>
                            <td>@service.Name</td>
                            <td>@service.CategoryName</td>
                            <td>@service.BasePrice.ToString("C0", LocalCulture)</td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <button class="btn btn-outline-primary btn-sm">Editar</button>
                                    <button class="btn btn-outline-danger btn-sm">Eliminar</button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">No se encontraron servicios con los filtros aplicados.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

@code {
    [Parameter] public IEnumerable<GetCategory> Categories { get; set; } = Enumerable.Empty<GetCategory>();
    [Parameter] public IEnumerable<GetServiceOffering> Services { get; set; } = Enumerable.Empty<GetServiceOffering>();
    [Parameter] public CultureInfo LocalCulture { get; set; } = CultureInfo.InvariantCulture;

    private string SelectedCategory { get; set; } = "";
    private string SelectedStatus { get; set; } = "";

    private IEnumerable<GetServiceOffering> FilteredServices => Services
        .Where(s => string.IsNullOrEmpty(SelectedCategory) || s.CategoryName == SelectedCategory)
        .Where(s => string.IsNullOrEmpty(SelectedStatus) || s.Status.ToString().ToLower() == SelectedStatus.ToLower());
}
