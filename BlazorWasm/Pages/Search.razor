@attribute [Route(RouteConstants.Search)]
@using System.Globalization
@using System.Linq
@using ClientLibrary.Helper
@using ClientLibrary.Models.Landing
@using ClientLibrary.Models.ServicioAhora.ServOffering
@using ClientLibrary.Services
@using ClientLibrary.Models.Category
@using ClientLibrary.Specifications
@inject IServOfferingService ServiceService
@inject ICategoryService CategoryService

@inject NavigationManager Navigation

<PageTitle>Buscar | ServicioAhora!</PageTitle>

<div class="landing-page">


    <main class="search-page container py-5">
        <div class="d-flex flex-column gap-4">
            <div class="surface-card search-hero">
                <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center gap-3 justify-content-between">
                    <div>
                        <p class="text-uppercase fw-semibold text-primary mb-2">Resultados</p>
                        <h1 class="mb-2">Explorá servicios hogareños</h1>
                        <p class="mb-0 text-muted">Mostrando coincidencias para <strong>@(string.IsNullOrWhiteSpace(searchTerm) ? "todas las categorías" : searchTerm)</strong>.</p>
                    </div>
                    <form class="search-bar" role="search" @onsubmit="OnSearch" @onsubmit:preventDefault>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
                            <input class="form-control" type="search" placeholder="Buscar servicios hogareños en ServicioAhora!" aria-label="Buscar" @bind="searchTerm" />
                            <button class="btn btn-primary" type="submit">Buscar</button>
                        </div>
                    </form>
                </div>
                <div class="d-flex flex-wrap gap-3 align-items-center mt-3">
                    <button class="btn btn-outline-primary" type="button" data-bs-toggle="modal" data-bs-target="#customSearchModal">
                        <i class="fa-solid fa-sliders me-2"></i> Búsqueda personalizada
                    </button>
                    <div class="d-flex flex-wrap gap-2 small text-muted">
                        <span class="badge bg-primary-subtle text-primary">Categoría: @FilterLabel(selectedCategory)</span>
                        <span class="badge bg-primary-subtle text-primary">Categoría: @FilterLabel(selectedCategory)</span>
                        @if (expressOnly)
                        {
                            <span class="badge bg-success-subtle text-success">Express prioritario</span>
                        }
                    </div>
                </div>
            </div>

            <div class="surface-card">
                <div class="d-flex justify-content-between align-items-center mb-3 flex-column flex-lg-row gap-2">
                    <div class="d-flex align-items-center gap-2">
                        <h5 class="mb-0">@FilteredResults.Count() resultados</h5>
                        <span class="text-muted">Mostrando servicios destacados para tu hogar</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <select class="form-select form-select-sm w-auto" @bind="selectedSortOrder">
                            <option value="relevance">Relevancia</option>
                            <option value="price_asc">Precio: Menor a Mayor</option>
                            <option value="price_desc">Precio: Mayor a Menor</option>
                            <option value="rating">Mejor calificados</option>
                        </select>
                        <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="modal" data-bs-target="#customSearchModal">
                            <i class="fa-solid fa-sliders me-1"></i> Filtros
                        </button>
                    </div>
                </div>
                <div class="row g-3">
                    @foreach (var result in FilteredResults)
                    {
                        <div class="col-12">
                            <div class="card search-result">
                                <div class="row g-0 align-items-center">
                                    <div class="col-12 col-md-3">
                                        <div class="ratio ratio-4x3">
                                            @if (!string.IsNullOrEmpty(result.Image))
                                            {
                                                <img src="@result.Image" alt="@result.Name" class="rounded-start" style="object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="d-flex align-items-center justify-content-center bg-light h-100 rounded-start">
                                                    @if (CategoryIcons.TryGetValue(result.CategoryId, out var icon) && !string.IsNullOrEmpty(icon))
                                                    {
                                                        <i class="@icon fa-3x text-muted opacity-50"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fa-solid fa-screwdriver-wrench fa-3x text-muted opacity-50"></i>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center gap-2 mb-2">
                                                <span class="badge rounded-pill bg-primary-subtle text-primary">@result.CategoryName</span>
                                                @* City not in model yet *@
                                                @* <span class="badge rounded-pill bg-secondary-subtle text-secondary">@result.City</span> *@
                                                
                                                @* Express not in model yet *@
                                                @* @if (result.ExpressAvailable)
                                                {
                                                    <span class="badge rounded-pill bg-success-subtle text-success">Express</span>
                                                } *@
                                            </div>
                                            <p class="text-primary fw-bold mb-1 small">@result.ProfessionalFullName</p>
                                            <h5 class="card-title mb-1">@result.Name</h5>
                                            <p class="card-text text-muted mb-2">@result.Description</p>
                                            @* Rating not in model yet *@
                                            @* <small class="text-muted">Última calificación: @result.Rating.ToString("0.0", CultureInfo.InvariantCulture) ⭐</small> *@
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-3 d-flex flex-column align-items-start align-items-md-end gap-2 p-3">
                                        <div class="price-tag">@result.BasePrice.ToString("C0", LocalCulture)</div>
                                        <button class="btn btn-outline-primary w-100" @onclick="() => GoToService(result.Id)">Ver detalles</button>
                                        <button class="btn btn-primary w-100" @onclick="() => GoToService(result.Id)">Solicitar ahora</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!FilteredResults.Any())
                    {
                        <div class="col-12">
                            <div class="alert alert-info mb-0">No encontramos resultados con esos filtros. Probá ajustar la búsqueda personalizada.</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>

    <div class="modal fade" id="customSearchModal" tabindex="-1" aria-labelledby="customSearchModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="customSearchModalLabel">Búsqueda personalizada</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Categoría</label>
                            <select class="form-select" @bind="selectedCategory">
                                <option value="todas">Todas</option>
                                @foreach (var category in Categories)
                                {
                                    <option value="@category">@category</option>
                                }
                            </select>
                        </div>
                        <!-- City and Budget filters removed -->
                        <div class="col-md-6 d-flex align-items-end">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="expressCheck" @bind="expressOnly" />
                                <label class="form-check-label" for="expressCheck">Necesito atención express</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" @onclick="ApplyFilters">Aplicar filtros</button>
                </div>
            </div>
        </div>
    </div>


</div>

@code {
    private static readonly CultureInfo LocalCulture = new("es-AR");

    private readonly SearchConfig SearchBar = new("Buscar servicios hogareños en ServicioAhora!", "Buscar");

    private readonly IReadOnlyList<MenuActionModel> AccountActions = MenuConstants.AccountActions;
    private readonly IReadOnlyList<NavLinkModel> PrimaryNavLinks = MenuConstants.PrimaryNavLinks;

    private readonly IReadOnlyList<string> FooterContact = new List<string>
    {
        "Tel: +54 11 5555 1111",
        "Email: hola@servicioahora.com",
        "Horario: Lunes a domingo 8 a 22 h"
    };

    private readonly IReadOnlyList<FooterGroupModel> FooterGroups = new List<FooterGroupModel>
    {
        new("Explorá más", new []
        {
            new FooterLinkModel("Servicios", RouteConstants.HashServices),
            new FooterLinkModel("Profesionales", RouteConstants.Professionals),
            new FooterLinkModel("Garantías", RouteConstants.HashGarantias)
        })
    };

    private int CurrentYear => DateTime.Now.Year;

    [SupplyParameterFromQuery(Name = "query")]
    public string? Query { get; set; }

    [SupplyParameterFromQuery(Name = "categoryId")]
    public Guid? CategoryId { get; set; }

    private string searchTerm = string.Empty;
    private string selectedCategory = "todas";
    // private string selectedCity = "todas"; // Removed
    // private string selectedPriceRange = "cualquiera"; // Removed
    private string selectedSortOrder = "relevance";
    private bool expressOnly;

    private IEnumerable<GetServiceOffering> Results = new List<GetServiceOffering>();
    private Dictionary<Guid, string> CategoryIcons = new();

    private IEnumerable<string> Categories => Results.Select(r => r.CategoryName).Distinct().Where(c => !string.IsNullOrEmpty(c)).OrderBy(c => c);
    
    // We don't have City in GetServiceOffering yet, so we'll mock or ignore for now, or check if it's available elsewhere. 
    // For now, let's just return a placeholder or empty if not in model.
    // Cities list removed 

    private IEnumerable<GetServiceOffering> FilteredResults => Results;

    private object GetSortKey(GetServiceOffering r) => selectedSortOrder switch
    {
        "price_asc" => r.BasePrice,
        "price_desc" => -r.BasePrice,
        // "rating" => -r.Rating,
        _ => (object)0 
    };

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var categories = await CategoryService.GetAllAsync();
            if (categories != null)
            {
                CategoryIcons = categories.ToDictionary(c => c.Id, c => c.Icon ?? "fa-solid fa-screwdriver-wrench");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading categories: {ex.Message}");
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        searchTerm = Query ?? string.Empty;
        
        // Fetch all results initially (could be optimized significantly with server-side filtering later)
        var allServices = await ServiceService.GetAllAsync();
        // Client-side filtering for active services
        allServices = allServices.Where(s => s.Status).ToList();

        // Apply filters using Specification Pattern
        var spec = new ServiceSearchSpecification(
            searchTerm, 
            CategoryId,
            null,
            null
        );

        Results = SpecificationEvaluator<GetServiceOffering>.GetQuery(allServices, spec);

        if (CategoryId.HasValue && CategoryId.Value != Guid.Empty && selectedCategory == "todas")
        {
            try
            {
                if (CategoryIcons.TryGetValue(CategoryId.Value, out _))
                {
                     var category = await CategoryService.GetByIdAsync(CategoryId.Value);
                     if (category != null)
                     {
                         selectedCategory = category.Name ?? "todas";
                     }
                }
            }
            catch(Exception ex)
            {
                Console.WriteLine($"Error resolving category ID: {ex.Message}");
            }
        }
    }


    private void OnSearch()
    {
        var term = searchTerm?.Trim();
        var queryString = string.IsNullOrWhiteSpace(term) ? string.Empty : $"?query={Uri.EscapeDataString(term)}";
        Navigation.NavigateTo($"{RouteConstants.Search}{queryString}");
    }

    private async Task ApplyFilters()
    {
        var allServices = await ServiceService.GetAllAsync();
        
        var spec = new ServiceSearchSpecification(
            searchTerm, 
            // Map selectedCategory string back to Guid if possible, or handle name-based filtering.
            // For now, Specification uses Guid. If selectedCategory is "todas", pass null/empty.
            // If it's a name, we might need to find the ID or assume CategoryId param governs.
            // Current code relies on CategoryId param. If UI dropdown changes, we should probably update CategoryId or filter by name.
            // Let's rely on CategoryId for now, or update it. 
            // Actually, the UI binds to `selectedCategory` string name.
            // The Specification accepts Guid. We need a way to map name to ID or update Spec to accept Name.
            // Simplest fix: Filter by name in a new spec constructor or here.
            CategoryId, 
            null, 
            null
        );

        var query = SpecificationEvaluator<GetServiceOffering>.GetQuery(allServices, spec);
        
        // Additional filter for Category Name if selected from dropdown (which is a string)
        if (selectedCategory != "todas")
        {
            query = query.Where(s => s.CategoryName.Equals(selectedCategory, StringComparison.OrdinalIgnoreCase));
        }
        
        Results = ApplySorting(query);
        StateHasChanged();
    }
    
    private IEnumerable<GetServiceOffering> ApplySorting(IEnumerable<GetServiceOffering> input)
    {
        return selectedSortOrder switch
        {
            "price_asc" => input.OrderBy(r => r.BasePrice),
            "price_desc" => input.OrderByDescending(r => r.BasePrice),
            "relevance" => input, // Default order
            _ => input
        };
    }

    private string FilterLabel(string value) => string.Equals(value, "todas", StringComparison.OrdinalIgnoreCase) ? "Todas" : value;

    // PriceLabel method removed

    private void GoToService(string slug) 
    {
         // Assuming Slug is ID or we have a slug property. GetServiceOffering has ID.
         // If route expects slug, we might need to adjust or use ID. 
         // Logic elsewhere suggests ID might be used for details? 
         // Checking ServiceDetail.razor would confirm, but usually it's ID or unique string.
         // Let's use ID for now as string.
    }
    
    private void GoToService(Guid id) => Navigation.NavigateTo(RouteConstants.Create(RouteConstants.ServiceDetail, id.ToString()));



}
