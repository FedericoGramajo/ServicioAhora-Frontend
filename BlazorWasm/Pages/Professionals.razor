@attribute [Route(RouteConstants.Professionals)]
@using System.Linq
@using ClientLibrary.Helper
@using ClientLibrary.Models.Landing
@using ClientLibrary.Models.Authentication.Rol.Professional
@using ClientLibrary.Services
@inject NavigationManager Navigation
@inject IProfessionalService ProfService

<PageTitle>Profesionales | ServicioAhora!</PageTitle>

<div class="landing-page">


    <main class="search-page container py-5 professional-search">
        <div class="d-flex flex-column gap-4">
            <div class="surface-card search-hero">
                <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center gap-3 justify-content-between">
                    <div>
                        <p class="text-uppercase fw-semibold text-primary mb-2">Profesionales verificados</p>
                        <h1 class="mb-2">Encontrá la persona ideal para tu hogar</h1>
                        <p class="mb-0 text-muted">Mostrando especialistas hogareños listos para ayudar</p>
                    </div>
                    <SearchBar @bind-Value="searchTerm" 
                               Placeholder="Buscar profesionales por nombre o rubro..." 
                               OnSearch="ApplyFilters" />
                </div>
            </div>

            <div class="surface-card">
                <div class="d-flex justify-content-between align-items-center mb-4 flex-column flex-lg-row gap-2">
                    <div class="d-flex align-items-center gap-2">
                        <h5 class="mb-0">@FilteredResults.Count() profesionales encontrados</h5>
                    </div>
                </div>

                @if (IsLoading)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row g-3">
                        @foreach (var professional in PaginatedResults)
                        {
                            <div class="col-12">
                                <ServiceResultCard Title="@professional.FullName"
                                                 Subtitle="@($"Especialista en {string.Join(", ", professional.Categories)}")"
                                                 Description="@($"Profesional verificado con {professional.BookingsCount} servicios completados.")"
                                                 ImageUrl="@professional.ProfileImage"
                                                 Rating="@professional.AvgRating"
                                                 Badges="@professional.Categories.Take(2).ToList()"
                                                 ActionText="Contactar ahora"
                                                 OnViewDetails="() => GoToProfessional(professional.AppUserId)"
                                                 OnActionClick="() => GoToProfessional(professional.AppUserId)" />
                            </div>
                        }

                        @if (!FilteredResults.Any())
                        {
                            <div class="col-12">
                                <div class="text-center py-5">
                                    <i class="fa-solid fa-user-slash fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No encontramos profesionales que coincidan con tu búsqueda.</p>
                                    <button class="btn btn-link" @onclick="ClearFilters">Ver todos los profesionales</button>
                                </div>
                            </div>
                        }
                    </div>

                        <div class="d-flex justify-content-center mt-5">
                            <Pagination CurrentPage="CurrentPage" 
                                        TotalPages="TotalPages" 
                                        OnPageChanged="ChangePage" />
                        </div>
                }
            </div>
        </div>
    </main>
</div>

@code {
    private List<GetProfessional> AllProfessionals = new();
    private bool IsLoading = true;
    private string searchTerm = string.Empty;

    // Pagination
    private int CurrentPage = 1;
    private int PageSize = 6;

    private IEnumerable<GetProfessional> FilteredResults => AllProfessionals
        .Where(p => string.IsNullOrWhiteSpace(searchTerm) || 
                   p.FullName.Contains(searchTerm, StringComparison.InvariantCultureIgnoreCase) || 
                   p.Categories.Any(c => c.Contains(searchTerm, StringComparison.InvariantCultureIgnoreCase)));

    private IEnumerable<GetProfessional> PaginatedResults => FilteredResults
        .Skip((CurrentPage - 1) * PageSize)
        .Take(PageSize);

    private int TotalPages => (int)Math.Ceiling(FilteredResults.Count() / (double)PageSize);

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        IsLoading = true;
        try
        {
            AllProfessionals = await ProfService.GetActiveProfessionalsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading professionals: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void ApplyFilters()
    {
        CurrentPage = 1;
        StateHasChanged();
    }

    private void ClearFilters()
    {
        searchTerm = string.Empty;
        CurrentPage = 1;
        StateHasChanged();
    }

    private void ChangePage(int newPage)
    {
        CurrentPage = newPage;
        StateHasChanged();
    }

    private void GoToProfessional(string id) => Navigation.NavigateTo(RouteConstants.Create(RouteConstants.ProfessionalDetail, id));
}
