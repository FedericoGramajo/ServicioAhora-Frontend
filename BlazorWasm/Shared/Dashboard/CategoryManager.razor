@using ClientLibrary.Services.Contracts
@using ClientLibrary.Models.Category
@using ClientLibrary.Models.ProfessionalCat
@using ClientLibrary.Services
@using Microsoft.JSInterop
@using ClientLibrary.Helper
@inject IProfessionalDashboardService DashboardService
@inject ICategoryService CategoryService
@inject IJSRuntime JS

<div class="surface-card mb-4">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3 mb-3">
        <div>
            <h4 class="mb-1">Mis Categorías</h4>
            <p class="text-muted mb-0">Gestioná las categorías en las que ofrecés servicios (Máximo 2)</p>
        </div>
        <div>
             @if (MyCategories.Count >= 2)
            {
                <span class="d-inline-block" tabindex="0" data-bs-toggle="tooltip" title="Has alcanzado el límite de categorías">
                    <button class="btn btn-primary btn-sm" disabled>
                        <i class="fa-solid fa-plus me-1"></i> Agregar Categoría
                    </button>
                </span>
            }
            else
            {
                <button class="btn btn-primary btn-sm" @onclick="OpenAddCategoryModal">
                    <i class="fa-solid fa-plus me-1"></i> Agregar Categoría
                </button>
            }
        </div>
    </div>
    
    @if (MyCategories.Count == 0)
    {
        <div class="alert alert-info">
            <i class="fa-solid fa-info-circle me-2"></i> Aún no has seleccionado ninguna categoría.
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var category in MyCategories)
            {
                <div class="col-md-6">
                    <div class="d-flex justify-content-between align-items-center p-3 border rounded bg-light">
                        <span class="fw-semibold">@category.CategoryName</span>
                        <button class="btn btn-outline-danger btn-sm" @onclick="() => RemoveCategory(category.ProfessionalId, category.CategoryId)">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showAddCategoryModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Agregar Categoría</h5>
                    <button type="button" class="btn-close" @onclick="CloseAddCategoryModal"></button>
                </div>
                <div class="modal-body">
                     @if (availableCategories == null)
                    {
                        <p>Cargando categorías...</p>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label class="form-label">Seleccione una categoría</label>
                            <select class="form-select" @bind="selectedCategoryId">
                                <option value="@Guid.Empty">-- Seleccionar --</option>
                                @foreach (var cat in availableCategories)
                                {
                                    <option value="@cat.Id">@cat.Name</option>
                                }
                            </select>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseAddCategoryModal">Cancelar</button>
                    <button type="button" class="btn btn-primary" @onclick="AddCategory" disabled="@(selectedCategoryId == Guid.Empty)">
                        Agregar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public List<GetProfessionalCategory> MyCategories { get; set; } = new();
    [Parameter] public EventCallback OnCategoryChanged { get; set; }

    private bool showAddCategoryModal = false;
    private IEnumerable<GetCategory> availableCategories;
    private Guid selectedCategoryId;

    private async Task OpenAddCategoryModal()
    {
        if (MyCategories.Count >= 2) return;

        var allCategories = await CategoryService.GetAllAsync();
        
        // Filter out categories that the professional already has
        availableCategories = allCategories.Where(c => !MyCategories.Any(mc => mc.CategoryId == c.Id));

        selectedCategoryId = Guid.Empty;
        showAddCategoryModal = true;
    }

    private void CloseAddCategoryModal()
    {
        showAddCategoryModal = false;
    }

    private async Task AddCategory()
    {
        if (selectedCategoryId == Guid.Empty) return;

        var response = await DashboardService.AddMyCategoryAsync(selectedCategoryId);
        if (response.success)
        {
            await OnCategoryChanged.InvokeAsync();
            await JS.ToastrSuccess("Categoría agregada correctamente.");
            CloseAddCategoryModal();
        }
        else
        {
            await JS.ToastrError(response.Message);
        }
    }

    private async Task RemoveCategory(string professionalId, Guid categoryId)
    {
        var response = await DashboardService.RemoveMyCategoryAsync(professionalId, categoryId);
        if (response.success)
        {
            await OnCategoryChanged.InvokeAsync();
            await JS.ToastrSuccess("Categoría eliminada correctamente.");
        }
        else
        {
            await JS.ToastrError(response.Message);
        }
    }
}
