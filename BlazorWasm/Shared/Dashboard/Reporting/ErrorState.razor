<div class="text-center py-5">
    <div class="mb-3">
        <i class="fa-solid fa-circle-exclamation fs-1 text-danger opacity-50"></i>
    </div>
    <h5 class="text-danger">Error al cargar datos</h5>
    <p class="small text-secondary mb-3">@Message</p>
    <button class="btn btn-outline-danger btn-sm" @onclick="OnRetry">
        <i class="fa-solid fa-rotate-right me-1"></i> Reintentar
    </button>
</div>

@code {
    [Parameter] public string Message { get; set; } = "Ocurrió un error inesperado al procesar la información.";
    [Parameter] public EventCallback OnRetry { get; set; }
}
