@using ClientLibrary.Models.Landing
@using System.Globalization

<section class="surface-card mt-4">
    <div class="d-flex flex-column flex-lg-row justify-content-between gap-3 mb-4">
        <div>
            <h4 class="mb-1">Análisis de mi actividad</h4>
            <p class="text-muted mb-0">Distribución de servicios por estado</p>
        </div>
    </div>

    <div class="row g-4 align-items-center">
        <!-- Donut: Estados -->
        <div class="col-lg-6">
            <div class="bar-chart-card h-100">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h6 class="mb-0">Distribución por estados</h6>
                        <small class="text-muted">Proporción de servicios</small>
                    </div>
                </div>

                <div class="d-flex align-items-center gap-4 flex-wrap">
                    <!-- Donut via conic-gradient (always a perfect complete circle) -->
                    <div class="position-relative flex-shrink-0" style="width: 140px; height: 140px;">
                        @if (DoughnutSegments.Any())
                        {
                            <div style="width: 100%; height: 100%; border-radius: 50%; background: @StatusGradient;"></div>
                            <div class="position-absolute top-50 start-50 translate-middle bg-white rounded-circle d-flex align-items-center justify-content-center" style="width: 56%; height: 56%;">
                                <span class="small fw-bold text-muted">@TotalCount</span>
                            </div>
                        }
                        else
                        {
                            <div style="width: 100%; height: 100%; border-radius: 50%; background: #e9ecef;"></div>
                            <div class="position-absolute top-50 start-50 translate-middle rounded-circle bg-white d-flex align-items-center justify-content-center" style="width: 56%; height: 56%;">
                                <span class="small text-muted">0</span>
                            </div>
                        }
                    </div>

                    <!-- Legend -->
                    <div class="flex-grow-1" style="min-width: 180px;">
                        @foreach (var segment in DoughnutSegments)
                        {
                            <div class="d-flex align-items-center justify-content-between mb-2 small">
                                <div class="d-flex align-items-center">
                                    <span class="d-inline-block rounded-circle me-2 flex-shrink-0" style="width: 10px; height: 10px; background-color: @segment.Color;"></span>
                                    <span>@segment.Label</span>
                                </div>
                                <span class="fw-bold">@segment.Percentage.ToString("0.0")% (@segment.Count)</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Progress Bars: Resumen de cumplimiento -->
        <div class="col-lg-6">
            <div class="bar-chart-card h-100">
                <h6 class="mb-3">Resumen de cumplimiento</h6>
                <div class="bar-chart compact">
                    @foreach (var item in StatusSummary)
                    {
                        <div class="bar-row mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1 gap-2">
                                <span class="small fw-semibold text-nowrap">@item.Label</span>
                                <span class="small text-muted text-nowrap">@item.Count servicios</span>
                            </div>
                            <div class="bar-track" style="height: 8px; background: #eee; border-radius: 4px; overflow: hidden;">
                                <div class="bar-fill" style="width: @(TotalCount > 0 ? (item.Count * 100 / TotalCount) : 0)%; height: 100%; background: @item.Color;"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Rubros contratados: torta de categorías de servicios completados -->
    <div class="row g-4 mt-1">
        <div class="col-12">
            <div class="bar-chart-card">
                <div class="d-flex justify-content-between align-items-start mb-4 flex-wrap gap-2">
                    <div>
                        <h6 class="mb-0">Rubros contratados</h6>
                        <small class="text-muted">Distribución de servicios <span class="badge bg-primary">completados</span> por categoría</small>
                    </div>
                    @if (CompletedCategoryData.Any())
                    {
                        <span class="small text-muted">@CompletedCount servicio@(CompletedCount != 1 ? "s" : "") completado@(CompletedCount != 1 ? "s" : "") en total</span>
                    }
                </div>

                @if (!CompletedCategoryData.Any())
                {
                    <p class="text-muted small text-center py-3">
                        <i class="fa-solid fa-chart-pie me-2"></i>Aún no tenés servicios completados para analizar.
                    </p>
                }
                else
                {
                    <div class="d-flex flex-column flex-lg-row align-items-center gap-5">
                        <!-- Torta conic-gradient -->
                        <div class="position-relative flex-shrink-0" style="width: 180px; height: 180px;">
                            <div style="width: 100%; height: 100%; border-radius: 50%; background: @CategoryGradient;"></div>
                            <div class="position-absolute top-50 start-50 translate-middle bg-white rounded-circle d-flex flex-column align-items-center justify-content-center" style="width: 52%; height: 52%;">
                                <span class="fw-bold" style="font-size: 1.1rem;">@CompletedCount</span>
                                <span class="text-muted" style="font-size: 0.65rem;">servicios</span>
                            </div>
                        </div>

                        <!-- Leyenda -->
                        <div class="flex-grow-1 w-100">
                            @{ var catColors = new[] { "#0d6efd", "#198754", "#ffc107", "#dc3545", "#6610f2", "#fd7e14", "#0dcaf0" }; }
                            @for (int i = 0; i < CompletedCategoryData.Count; i++)
                            {
                                var cat = CompletedCategoryData[i];
                                var color = catColors[i % catColors.Length];
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center mb-1 gap-2">
                                        <div class="d-flex align-items-center gap-2">
                                            <span class="d-inline-block rounded-circle flex-shrink-0" style="width: 12px; height: 12px; background: @color;"></span>
                                            <span class="small fw-semibold text-truncate">@cat.Category</span>
                                        </div>
                                        <div class="d-flex align-items-center gap-2 text-nowrap">
                                            <span class="small fw-bold" style="color: @color;">@cat.Percentage.ToString("0.0")%</span>
                                            <span class="small text-muted">(@cat.Count serv.)</span>
                                        </div>
                                    </div>
                                    <div style="height: 6px; background: #eee; border-radius: 4px; overflow: hidden;">
                                        <div style="width: @cat.Percentage.ToString("0.00", CultureInfo.InvariantCulture)%; height: 100%; background: @color; border-radius: 4px; transition: width 0.4s ease;"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter] public List<ServiceHistoryItem> History { get; set; } = new();

    private int TotalCount => History.Count;

    private List<StatusData> StatusSummary => new()
    {
        new("Pendientes",  History.Count(h => h.Status.ToLower().Contains("pending")  || h.Status.ToLower().Contains("pendiente")),  "#ffc107"),
        new("Confirmados", History.Count(h => h.Status.ToLower().Contains("confirmed")|| h.Status.ToLower().Contains("confirmado")), "#198754"),
        new("En curso",    History.Count(h => h.Status.ToLower().Contains("progress") || h.Status.ToLower().Contains("en curso")),   "#0dcaf0"),
        new("Completados", History.Count(h => h.Status.ToLower().Contains("completed")|| h.Status.ToLower().Contains("completado") || h.Status.ToLower().Contains("finalizado")), "#0d6efd"),
        new("Cancelados",  History.Count(h => h.Status.ToLower().Contains("canceled") || h.Status.ToLower().Contains("cancelado")),  "#dc3545")
    };

    private List<DoughnutSegment> DoughnutSegments
    {
        get
        {
            var data = StatusSummary.Where(x => x.Count > 0).ToList();
            var total = data.Sum(x => x.Count);
            if (total == 0) return new List<DoughnutSegment>();

            return data.Select(item => new DoughnutSegment(
                item.Label, item.Count,
                Math.Round((double)item.Count / total * 100, 1),
                item.Color)).ToList();
        }
    }

    // Conic-gradient string for the status donut (always a complete circle)
    private string StatusGradient
    {
        get
        {
            var segs = DoughnutSegments;
            if (!segs.Any()) return "#e9ecef";
            var parts = new List<string>();
            double cum = 0;
            foreach (var s in segs)
            {
                parts.Add($"{s.Color} {cum.ToString("0.00", CultureInfo.InvariantCulture)}% {(cum + s.Percentage).ToString("0.00", CultureInfo.InvariantCulture)}%");
                cum += s.Percentage;
            }
            return $"conic-gradient({string.Join(", ", parts)})";
        }
    }

    private int CompletedCount => History.Count(h =>
        h.Status.ToLower().Contains("completed") ||
        h.Status.ToLower().Contains("completado") ||
        h.Status.ToLower().Contains("finalizado"));

    private List<CategoryCatData> CompletedCategoryData
    {
        get
        {
            var completed = History.Where(h =>
                h.Status.ToLower().Contains("completed") ||
                h.Status.ToLower().Contains("completado") ||
                h.Status.ToLower().Contains("finalizado")).ToList();

            var total = completed.Count;
            if (total == 0) return new List<CategoryCatData>();

            return completed
                .GroupBy(h => string.IsNullOrWhiteSpace(h.Category) ? "Sin categoría" : h.Category)
                .Select(g => new CategoryCatData(g.Key, g.Count(), Math.Round((double)g.Count() / total * 100, 2)))
                .OrderByDescending(x => x.Count)
                .ToList();
        }
    }

    // Conic-gradient string for the category donut
    private string CategoryGradient
    {
        get
        {
            var data = CompletedCategoryData;
            if (!data.Any()) return "#e9ecef";
            var colors = new[] { "#0d6efd", "#198754", "#ffc107", "#dc3545", "#6610f2", "#fd7e14", "#0dcaf0" };
            var parts = new List<string>();
            double cum = 0;
            for (int i = 0; i < data.Count; i++)
            {
                var color = colors[i % colors.Length];
                parts.Add($"{color} {cum.ToString("0.00", CultureInfo.InvariantCulture)}% {(cum + data[i].Percentage).ToString("0.00", CultureInfo.InvariantCulture)}%");
                cum += data[i].Percentage;
            }
            return $"conic-gradient({string.Join(", ", parts)})";
        }
    }

    private record StatusData(string Label, int Count, string Color);
    private record DoughnutSegment(string Label, int Count, double Percentage, string Color);
    private record CategoryCatData(string Category, int Count, double Percentage);
}
